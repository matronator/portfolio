---
import Layout from '../layouts/Layout.astro';
import SpaceBackground from '../components/SpaceBackground.astro';
import MainMenu from '../components/MainMenu.astro';
---

<style>
	.wrapper {
		width: 100vw;
		height: 100vh;
		position: relative;
	}

	.space-bg {
		z-index: 0;
		position: fixed;
	}

	.main-menu {
		z-index: 1;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}
</style>

<Layout>
	<div class="wrapper">
		<div class="space-bg">
			<SpaceBackground />
		</div>
		<div class="main-menu">
			<MainMenu />
		</div>
	</div>
</Layout>

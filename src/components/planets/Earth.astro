---
import DayMap from '../../assets/images/planet-textures/earth/2k_earth_daymap.jpg';
import NightMap from '../../assets/images/planet-textures/earth/2k_earth_nightmap.jpg';
import Clouds from '../../assets/images/planet-textures/earth/2k_earth_clouds.jpg';
import { getImage } from 'astro:assets';

const dayMap = await getImage({ src: DayMap });
const nightMap = await getImage({ src: NightMap });
const clouds = await getImage({ src: Clouds });
---

<style>
.planet-container {
    border-radius: 50%;
    box-shadow: 5px -3px 10px 3px #5e90f1;
    height: 500px;
    overflow: hidden;
    position: relative;
    width: 500px;
    z-index: 1;
}
.night {
    animation: rotate-night 120s linear infinite;
    background-size: 200%;
    height: 500px;
    position: absolute;
    width: 500px;
    z-index: 2;
}
.day {
    animation: rotate-day 120s linear infinite;
    background-size: 200%;
    border-left: solid 1px black;
    border-radius: 50%;
    box-shadow: 5px 0 30px 10px #040615 inset;
    height: 500px;
    margin-left: 110px;
    position: absolute;
    width: 500px;
    z-index: 3;
}
.clouds {
    animation: rotate-day 110s linear infinite, spin-clouds 100s ease-in-out infinite;
    background-size: 200%;
    border-radius: 50%;
    box-shadow: 5px 0 30px 10px #040615 inset, -9px 0px 20px 10px #5e90f1 inset;
    height: 500px;
    margin-left: 100px;
    opacity: 0.6;
    background-blend-mode: screen;
    position: absolute;
    width: 500px;
    z-index: 4;
}
.inner-shadow {
    background: transparent;
    border-radius: 50%;
    box-shadow: -5px 0 10px 1px #152b57 inset, 5px 0 10px 1px #040615 inset;
    height: 500px;
    margin-left: 0;
    position: absolute;
    width: 500px;
    z-index: 5;
}

@keyframes rotate-day {
    0% { background-position: 120% 0; }
    100% { background-position: -80% 0; }
}
@keyframes rotate-night {
    0% { background-position: calc(120% + 120px) 0; }
    100% { background-position: calc(-80% + 120px) 0; }
}
@keyframes spin-clouds {
    0% { transform: rotate(0deg); }
    50% { transform: rotate(30deg); }
    100% { transform: rotate(0deg); }
}
</style>

<div class="planet-container">
    <div class="night" style={`background-image: url(${nightMap.src});`}></div>
    <div class="day" style={`background-image: url(${dayMap.src});`}></div>
    <div class="clouds" style={`background-image: url(${clouds.src});`}></div>
    <div class="inner-shadow"></div>
</div>
